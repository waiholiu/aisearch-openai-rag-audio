{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start app",
            "type": "shell",
            "command": "pwsh ${workspaceFolder}/app/start.ps1",
            "presentation": {
                "reveal": "silent"
            },
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Frontend Dependencies",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/app/frontend"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/app/frontend"
            },
            "dependsOn": ["Install Frontend Dependencies"],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Frontend Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/app/frontend"
            },
            "dependsOn": ["Install Frontend Dependencies"],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local:.*http://127.0.0.1"
                }
            }
        },
        {
            "label": "Install Python Dependencies",
            "type": "shell",
            "command": "python3 -m pip install -r requirements.txt",
            "options": {
                "cwd": "${workspaceFolder}/app/backend"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}